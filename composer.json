{
    "name": "setono/editorjs-bundle",
    "description": "Symfony bundle that integrates the editorjs-php library",
    "license": "MIT",
    "type": "symfony-bundle",
    "authors": [
        {
            "name": "Joachim LÃ¸vgaard",
            "email": "joachim@loevgaard.dk"
        }
    ],
    "require": {
        "php": ">=7.4",
        "setono/editorjs-php": "^0.2",
        "symfony/config": "^4.4 || ^5.4 || ^6.0",
        "symfony/dependency-injection": "^4.4 || ^5.4 || ^6.0",
        "symfony/http-foundation": "^4.4 || ^5.4 || ^6.0",
        "symfony/http-kernel": "^4.4 || ^5.4 || ^6.0",
        "webmozart/assert": "^1.10"
    },
    "require-dev": {
        "infection/infection": "^0.26",
        "matthiasnoback/symfony-dependency-injection-test": "^4.3",
        "phpspec/prophecy-phpunit": "^2.0",
        "phpunit/phpunit": "^9.5",
        "psalm/plugin-phpunit": "^0.16.1 || ^0.18.0",
        "psalm/plugin-symfony": "^3.0",
        "roave/security-advisories": "dev-latest",
        "setono/code-quality-pack": "^2.1.3"
    },
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Setono\\EditorJSBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Setono\\EditorJSBundle\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": false,
            "ergebnis/composer-normalize": true,
            "infection/extension-installer": true
        },
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "scripts": {
        "analyse": "psalm --threads=8",
        "check-style": "ecs check",
        "fix-style": "ecs check --fix",
        "phpunit": "phpunit"
    }
}
